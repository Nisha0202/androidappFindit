<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".CreatePostActivity"
android:background="@color/white">

    <TextView
        android:id="@+id/title"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#efeded"
        android:gravity="center"
        android:text="Item Information"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <EditText
        android:id="@+id/username"
        android:textColor="#3d3d3d"
        android:textColorHint="#474747"
        android:layout_marginTop="4dp"
        android:layout_width="252dp"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:hint="User name"
        android:layout_marginStart="5sp"
        android:textStyle="bold"
        android:fontFamily="@font/imprima_regular"
        app:layout_constraintEnd_toStartOf="@+id/photo_field"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"/>
    <EditText
    android:id="@+id/item_name"
    android:inputType="text"
    android:layout_width="252dp"
    android:layout_height="wrap_content"
    android:hint="Item Name"

        android:textColor="#3d3d3d"
        android:textColorHint="#808080"
    android:textSize="20sp"
        android:maxLength="12"
    android:layout_marginTop="30dp"
    app:layout_constraintEnd_toStartOf="@+id/photo_field"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/username" />
<ImageView
    android:id="@+id/photo_field"
    android:layout_marginTop="8dp"
    android:layout_width="90dp"
    android:layout_height="90dp"
    android:layout_marginHorizontal="18dp"
    android:src="@drawable/default_image"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/title" />
    <Button
        android:id="@+id/selectImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:cornerRadius="6dp"
        android:text="Upload"
        android:textStyle="bold"
        android:textSize="12sp"
        android:textColor="#28DF45"
        android:backgroundTint="#efeded"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintTop_toBottomOf="@+id/photo_field" />
<EditText
    android:id="@+id/desc"
    android:layout_width="0dp"
    android:inputType="text"
    android:layout_marginEnd="18dp"
    android:layout_marginBottom="15dp"
    android:layout_height="wrap_content"
    android:hint="Description"
    android:textColor="#3d3d3d"
    android:textColorHint="#808080"
    android:maxLength="180"
    android:layout_marginTop="30dp"
    android:textSize="20sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="@+id/item_name"
    app:layout_constraintTop_toBottomOf="@+id/item_name" />

<EditText
    android:id="@+id/etDate"
    android:layout_width="200sp"
    android:layout_marginEnd="18dp"
    android:layout_marginTop="30dp"
    android:layout_height="wrap_content"
    android:hint="Date(dd/mm/yyyy)"
    android:textColor="#3d3d3d"
    android:textColorHint="#808080"
    android:textSize="20sp"
    android:inputType="text"
    app:layout_constraintStart_toStartOf="@+id/item_name"
    app:layout_constraintTop_toBottomOf="@+id/desc"
    android:paddingEnd="20sp"/>
    <EditText
        android:id="@+id/etTime"
        android:layout_width="0dp"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"
        android:hint="Time(i:12:00pm)"
        android:textColor="#3d3d3d"
        android:textColorHint="#808080"
        android:textSize="20sp"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/etDate"
        app:layout_constraintTop_toBottomOf="@+id/desc" />
<EditText
    android:id="@+id/location"
    android:layout_width="0dp"
    android:layout_marginEnd="18dp"
    android:inputType="text"
    android:layout_height="wrap_content"
    android:hint="Location"
    android:textColor="#3d3d3d"
    android:textColorHint="#808080"
    android:textSize="20sp"
    android:maxLength="100"
    android:layout_marginTop="30dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="@+id/item_name"
    app:layout_constraintTop_toBottomOf="@+id/etDate" />
    <EditText
        android:id="@+id/email"
        android:layout_width="0dp"
        android:layout_marginEnd="18dp"
        android:inputType="textEmailAddress"
        android:layout_height="wrap_content"
        android:hint="Contact Email"
        android:textSize="20sp"
        android:textColor="#3d3d3d"
        android:textColorHint="#474747"
        android:enabled="false"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/imprima_regular"
        app:layout_constraintStart_toStartOf="@+id/item_name"
        app:layout_constraintTop_toBottomOf="@+id/location" />
    <RadioGroup
        android:id="@+id/status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:textColor="#3d3d3d"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/item_name"
        app:layout_constraintTop_toBottomOf="@+id/email">

        <RadioButton
            android:id="@+id/radio_lost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lost"
            android:textColor="#3d3d3d"
            android:textColorHint="#474747"
            android:textSize="20sp"
            android:layout_marginRight="16dp"/>

        <RadioButton
            android:id="@+id/radio_found"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Found"
            android:textSize="20sp"
            android:textColor="#3d3d3d"
            android:textColorHint="#474747"/>
    </RadioGroup>
<!--    app:layout_constraintTop_toBottomOf="@id/status"-->
    <Button
        android:id="@+id/back"
        android:layout_width="0dp"
        app:cornerRadius="0dp"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textColor="#A9A9A9"
        android:textStyle="bold"
        android:textSize="22sp"
        android:backgroundTint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingVertical="16dp"
        android:layout_marginTop="6dp"

    app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/saveDraft"
        android:gravity="center"/>

    <Button
        android:id="@+id/saveDraft"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:text="Draft"
        android:paddingVertical="14dp"
        android:textColor="#808080"
        android:textSize="22sp"
        android:textStyle="bold"
        app:cornerRadius="0dp"
        android:layout_marginTop="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonPost"
        app:layout_constraintStart_toEndOf="@+id/back" />
    <Button
        android:id="@+id/buttonPost"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:text="Post"
        android:paddingVertical="14dp"
        android:textColor="#28DF45"
        android:textSize="22sp"
        android:textStyle="bold"
        app:cornerRadius="0dp"
        android:layout_marginTop="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/saveDraft" />

</androidx.constraintlayout.widget.ConstraintLayout>
